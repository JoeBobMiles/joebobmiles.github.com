{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "plugins": [
          {
            "name": "typescript-plugin-css-modules",
            "options": {
              "classnameTransform": "camelCaseOnly",
              "rendererOptions": {
                "sass": {
                  "includePaths": [
                    "./src/styles"
                  ]
                }
              }
            }
          }
        ],
        "typeRoots": [
          "src/types/"
        ],
        "baseUrl": "./",
        "paths": {
          "@styles": [ "./src/styles" ]
        }
    },
    "include": ["src/"],
}